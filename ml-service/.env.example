# ML Service Environment Variables Template
# Copy this file to .env and fill in your actual values

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=true
FLASK_APP=app.py

# Service Configuration
ML_SERVICE_PORT=5001
ML_SERVICE_HOST=0.0.0.0

# Database Configuration (if needed for ML data storage)
DATABASE_URL=mongodb://localhost:27017/finfluence_ml

# Model Configuration
MODEL_CACHE_DIR=./models
MODEL_UPDATE_INTERVAL=86400
PREDICTION_CONFIDENCE_THRESHOLD=0.7

# External APIs (Optional)
FINANCIAL_DATA_API_KEY=
MARKET_DATA_API_URL=

# Logging
LOG_LEVEL=INFO
LOG_FILE=ml_service.log

# Performance Settings
MAX_BATCH_SIZE=1000
REQUEST_TIMEOUT=30